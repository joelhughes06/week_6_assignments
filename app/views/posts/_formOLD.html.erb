<h4>Create a Post</h4>

<% if @post.errors.any? %>
	<div class='alert alert-error span8'>
	<h5>There were some errors:</h5>
	<ul>
		<% @post.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
	</div>
<% end %>

<%= form_for @post do |f| %>  <!--  actually is PATCH /posts/:id -->
	<%= f.label :title %>
	<%= f.text_field :title %>
	<br/>
	<%= f.label :url %>
	<%= f.text_field :url %>
	<br/>
	<%= f.submit "Create Post", class: 'btn btn-primary' %>
<% end %>